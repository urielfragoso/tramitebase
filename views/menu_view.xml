<?xml version="1.0"?>
<odoo>
   <!-- RECORD QUE MANDA  A LLAMAR LA VENTANA DE SOLICITUDES-->

    <record id="solicitud_action" model="ir.actions.act_window">
        <field name="name">tramitebase</field>
        <field name="res_model">sol.tramite</field>
        <field name="view_mode">tree,form,kanban,pivot</field>
        <field name="context">{'default_create_uid':uid}</field>
        <field name="domain">[('create_uid','=',uid)]</field>

    </record>

    <record id="requerimiento_action" model="ir.actions.act_window">
        <field name="name">requerimiento base</field>
        <field name="res_model">sol.requerimiento</field>
        <field name="view_mode">form</field>
    </record>


    <record id="view_estatus_asunto_search" model="ir.ui.view">
        <field name="name">filtro_estatus_asunto</field>
        <field name="model">tramite.gestion.base</field>
        <field name="arch" type="xml">
            <search string="Estatus Asunto">
                <filter name="autorizado" string="Autorizado" domain="[('EstatusAsunto','=','autorizado')]"/>
                <filter name="rechazado" string="Cancelado" domain="[('EstatusAsunto','=','rechazado')]"/>
                <filter name="activo" string="Activo" domain="[('EstatusAsunto','=','activo')]"/>

                <group expand="0" string="Group by">
                    <filter string="Estatus asunto" name="estatus" domain="[]" context="{'group_by':'EstatusAsunto'}"/>
                </group>
            </search>

        </field>
    </record>

   <!-- RECORD QUE MANDA  A LLAMAR LA VENTANA DE SOLICITUDES-->
    <record id="gestion_tramites_action" model="ir.actions.act_window">
        <field name="name">Gestion de trÃ¡mite Base</field>
        <field name="res_model">tramite.gestion.base</field>
        <field name="view_mode">kanban,tree</field>
        <field name="domain">[('RefIdUsuario','=',uid)]</field><!--,('EstatusAsunto','=','activo')] -->
        <field name="context">{'search_default_activo':1}</field>
        <field name="search_view_id" ref="view_estatus_asunto_search"/>
    </record>

    <!--RECORD QUE MANDA A LLAMAR EL TIEMPO DE RESPUESTA POR CADA TRAMTIE EN SUS ETAPAS -->
    <record id="gestion_tiempo_action" model="ir.actions.act_window">
        <field name="name">gestiontramitesbase.tiemporespuesta</field>
        <field name="res_model">tiempos.tramite.base</field>
        <field name="view_mode">tree</field>

    </record>



    <menuitem name="Tramite Base" id="registro_iap_menu" sequence="0" web_icon="tramitebase,static/description/base.png" />
    <!-- MENU IAP-->
    <menuitem name="Solicitudes de IAP" id="registro_institucion_menu" parent="registro_iap_menu" action="solicitud_action"  sequence="1" groups="solicitud_tramite_group_user"  />
    <menuitem name="Gestion de Solicitudes" id="gestion_institucion_menu" parent="registro_iap_menu" action="gestion_tramites_action"  sequence="2" groups="gestion_tramites_group_user"  />


</odoo>

